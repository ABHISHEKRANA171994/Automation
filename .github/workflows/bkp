name: Manage Repositories

on:
  workflow_dispatch:
    inputs:
      emails:
        description: 'Comma-separated list of email addresses'
        required: true
        type: string
      action:
        description: 'Action to perform'
        required: true
        type: choice
        options:
          - create
          - destroy

jobs:
  create-repositories:
    runs-on: ubuntu-latest
    steps:
      # Checkout the repository code
      - name: Checkout code
        uses: actions/checkout@v3

      # Set up Terraform with the specified version
      - name: Set up Terraform
        uses: hashicorp/setup-terraform@v2
        with:
          terraform_version: 1.4.0  # Specify your required Terraform version

      # Prepare Terraform variables based on user inputs
      - name: Prepare Terraform Variables
        run: |
          # Write GitHub token to terraform.tfvars
          echo "github_token = \"${{ secrets.MY_GITHUB_TOKEN }}\"" > terraform.tfvars
          # Write GitHub organization name to terraform.tfvars
          echo "my_github_organization = \"${{ secrets.MY_GITHUB_ORGANIZATION }}\"" >> terraform.tfvars
          # Write email addresses to terraform.tfvars
          echo "emails = [\"$(echo ${{ github.event.inputs.emails }} | tr ',' '\",\"')\"]" >> terraform.tfvars

      # Initialize Terraform configuration
      - name: Terraform Init
        run: terraform init

      # Apply Terraform configuration to create repositories if 'create' action is selected
      - name: Terraform Apply
        if: ${{ github.event.inputs.action == 'create' }}
        run: terraform apply -auto-approve
        env:
          MY_GITHUB_TOKEN: ${{ secrets.MY_GITHUB_TOKEN }}

  destroy-repositories:
    runs-on: ubuntu-latest
    needs: create-repositories  # Ensure this job runs after the create-repositories job
    if: ${{ github.event.inputs.action == 'destroy' }}  # Run only if 'destroy' action is selected
    steps:
      # Checkout the repository code
      - name: Checkout code
        uses: actions/checkout@v3

      # Set up Terraform with the specified version
      - name: Set up Terraform
        uses: hashicorp/setup-terraform@v2
        with:
          terraform_version: 1.4.0  # Specify your required Terraform version

      # Prepare Terraform variables based on user inputs
      - name: Prepare Terraform Variables
        run: |
          # Write GitHub token to terraform.tfvars
          echo "github_token = \"${{ secrets.MY_GITHUB_TOKEN }}\"" > terraform.tfvars
          # Write GitHub organization name to terraform.tfvars
          echo "my_github_organization = \"${{ secrets.MY_GITHUB_ORGANIZATION }}\"" >> terraform.tfvars
          # Write email addresses to terraform.tfvars
          echo "emails = [\"$(echo ${{ github.event.inputs.emails }} | tr ',' '\",\"')\"]" >> terraform.tfvars

      # Initialize Terraform configuration
      - name: Terraform Init
        run: terraform init

      # Destroy the resources if 'destroy' action is selected
      - name: Terraform Destroy
        run: terraform destroy -auto-approve
        env:
          MY_GITHUB_TOKEN: ${{ secrets.MY_GITHUB_TOKEN }}
